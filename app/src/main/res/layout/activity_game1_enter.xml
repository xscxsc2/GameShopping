<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game1.Game1_Enter"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_gameBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:background="#00000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.example.ex42.util.LunBo.MyViewPager
            android:id="@+id/looper_pager"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:id="@+id/points_container"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40px"
            android:gravity="center"
            android:orientation="horizontal"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/et_xxooid"
            style="@style/CustomTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:text="OOXX"
            android:textSize="60dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/et_ooxx_whetherBuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="(未购买)"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ooxx_desc"
        android:textSize="20dp"
        android:layout_marginTop="30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <Button
            android:onClick="Pay"
            android:id="@+id/btn_bottom_begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始游玩"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/rounded_button" />

    </RelativeLayout>

</LinearLayout>